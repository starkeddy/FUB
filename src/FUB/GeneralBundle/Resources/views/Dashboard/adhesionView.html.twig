{% extends 'FUBGeneralBundle:Default:dashboard.html.twig' %}
{% block content%}
    <h14class="page-header">Demande en attente de validation</h1>
    {% for adhesion in demande %}
        <div class="form-group">
            <table style="margin: 0 auto" width="90%" class="table table-bordered">
                <tr>
                    <td colspan="3"></td>
                    <td><img src="{{ asset('uploads/pictures/'~adhesion.picture) }}" alt="..." style="text-align: center" width="100" height="100"></td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ adhesion.nom }}</td>
                    <th>Prénom(s)</th>
                    <td>{{ adhesion.prenom }}</td>
                </tr>
                <tr>
                    <th>Date de naissance</th>
                    <td>{{ adhesion.dateNaissance|date('d-m-Y') }}</td>
                    <th>Profession</th>
                    <td>{{ adhesion.profession }}</td>
                </tr>
                <tr>
                    <th rowspan="2">Filiation</th>
                    <th>Père</th>
                    <td colspan="2">{{ adhesion.perenom }}</td>
                </tr>
                <tr>
                    <th>Mère</th>
                    <td colspan="2">{{ adhesion.merenom }}</td>
                </tr>
                <tr>
                    <th>Nationalité</th>
                    <td>{{ adhesion.nationalite }}</td>
                    <th>Adresse</th>
                    <td>{{ adhesion.adresse }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ adhesion.ville }}</td>
                    <th>Pays</th>
                    <td>{{ adhesion.country }}</td>
                </tr>
                <tr>
                    <th>Contact</th>
                    <td>+{{ adhesion.contact }}</td>
                    <th>E-Mail</th>
                    <td>{{ adhesion.mail }}</td>
                </tr>
                <tr>
                    <th rowspan="2">Montant à investir</th>
                    <th>en chiffre</th>
                    <td colspan="2">Ar{{ adhesion.montantChiffre }}</td>
                </tr>
                <tr>
                    <th>en lettre</th>
                    <td colspan="2">{{ adhesion.montantLettre }}</td>
                </tr>
                <tr>
                    <th>Date début du contrat</th>
                    <td>{{ adhesion.dateContrat|date('d-m-Y') }}</td>
                    <th>Durée du contrat</th>
                    <td>{{ adhesion.dureeContrat }} mois</td>
                </tr>
                <tr>
                    <th rowspan="4">Qui contacter en cas
                        de force majeur ou
                        de décès
                    </th>
                    <th>Nom et prénom(s)</th>
                    <td colspan="2">{{ adhesion.heritieNomPrenom }}</td>
                </tr>
                <tr>
                    <th>Contact</th>
                    <td colspan="2">{{ adhesion.heritierContact }}</td>
                </tr>
                <tr>
                    <th>E-Mail</th>
                    <td colspan="2">{{ adhesion.heritierMail }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td colspan="2">{{ adhesion.heritierAdresse }}</td>
                </tr>
                <tr>
                    <th rowspan="2">Sondage</th>
                    <th>Comment aviez-vous
                        connu FUB? </th>
                    <td colspan="2">{{ adhesion.sondageFub }}</td>
                </tr>
                <tr>
                    <th>Qu'est-ce qui vous
                        pousse à investir chez FUB? </th>
                    <td colspan="2">{{ adhesion.motivationFub }}</td>
                </tr>
                <tr>
                    <td colspan="4" style="text-align: center">
                    {% block formulaire %}
                        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                        {{ form_errors(form) }}
                        <table style="margin: 0px auto">
                            <tr>
                                <td colspan="2" style="padding: 2px">{{ form_widget(form.view, {'attr': {'class': 'btn btn-primary'},'label':'Voir le contrat'}) }}</td>
                            </tr>
                            <tr>
                                <td style="padding: 2px">{{ form_widget(form.save, {'attr': {'class': 'btn btn-success','onclick': 'return confirm("Voulez-vous vraiment cloturer la demande?")'},'label':'Cloturer la demande'}) }}</td>
                                <td style="padding: 2px">{{ form_widget(form.denie, {'attr':{'class': 'btn btn-danger','onclick': 'return confirm("Voulez-vous vraiment refuser la demande?")'},'label':'Refuser la demande'}) }}</td>
                            </tr>
                        </table>
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    {% endblock %}
                    </td>
                </tr>
            </table>
        </div>
    {% endfor %}
{% endblock %}